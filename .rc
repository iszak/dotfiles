#!/usr/bin/env sh

# Use vi mode
set -o vi

# shellcheck source=./.aliases
. "$HOME/.aliases"

# shellcheck source=./.exports
. "$HOME/.exports"

# Node.js
NVM_PATH="$HOME/.nvm/nvm.sh"
if [ -s "$NVM_PATH" ]; then
  # shellcheck source=./.nvm/nvm.sh
  . "$NVM_PATH"
fi

# Ruby
if [ -f "$(which rbenv)" ]; then
    eval "$(rbenv init -)"
fi

# ZFZ
FZF_KEY_BINDING_PATH="/usr/share/fzf/key-bindings.$(basename $SHELL)"
if [ -f "${FZF_KEY_BINDING_PATH}" ]; then
    source "${FZF_KEY_BINDING_PATH}"
fi

FZF_COMPLETION_PATH="/usr/share/fzf/completion.$(basename $SHELL)"
if [ -f "${FZF_COMPLETION_PATH}" ]; then
    source "${FZF_COMPLETION_PATH}"
fi
