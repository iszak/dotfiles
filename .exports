#!/bin/sh

# Path
export PATH="bin:$PATH"


# Language
export LANG="en_GB.UTF-8"


# Editor
export EDITOR='vim'


# SSH Keys
export SSH_KEY_PATH="$HOME/.ssh/dsa_id"


# Go
export PATH=$PATH:/usr/local/go/bin
export GOPATH=~/.go/

# Otto
if [ -f /Users/iszak/.otto/otto ]; then
    export PATH="/Users/iszak/.otto:$PATH"
fi

# Packer
if [ -f /Users/iszak/.packer/packer ]; then
    export PATH="/Users/iszak/.packer:$PATH"
fi

# Concourse
if [ -f /Users/iszak/.concourse ]; then
    export PATH="/Users/iszak/.concourse:$PATH"
fi
